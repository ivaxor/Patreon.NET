<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Nullable>enable</Nullable>
	<LangVersion>12</LangVersion>
    <Title>Patreon.NET</Title>
    <Description>.NET library for Patreon</Description>    
    <Authors>IVAXOR</Authors>
    <Company>IVAXOR</Company>
    <Version>0.0.8</Version>
    <RepositoryUrl>https://github.com/ivaxor/Patreon.NET</RepositoryUrl>
    <PackageTags>patreon</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>    
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>    
  </PropertyGroup>
	
  <ItemGroup>
    <None Include="..\LICENSE.txt" Pack="true" PackagePath="\" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.1" />
  </ItemGroup>

</Project>
